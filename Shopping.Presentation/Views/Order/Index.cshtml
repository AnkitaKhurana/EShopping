@model Shopping.Shared.DTOs.AllOrdersDTO

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>
    <h4>OrderDTO</h4>
    <hr />
    @foreach (var order in Model.Orders)
    {
    <dl class="dl-horizontal">
        <dt>
            @order.Id;
        </dt>

        <dd>
            @order.TotalAmount;
        </dd>

        <dt>
            @order.OrderStatus;
        </dt>
       @Html.EditorFor(order.order)

    </dl>
    }
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
